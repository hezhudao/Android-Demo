<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<SurfaceView android:id="@+id/main_surfaceView"
		android:layout_width="fill_parent" android:layout_height="fill_parent" />
	<TextSwitcher android:id="@+id/tvTextPlayer"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:layout_alignParentBottom="true" android:foregroundGravity="center_horizontal"
		android:layout_centerHorizontal="true" />
	<TextView android:layout_width="wrap_content" android:id="@+id/main_record_Text"
		android:layout_height="wrap_content" android:layout_alignParentTop="true"
		android:layout_centerHorizontal="true" android:gravity="center" />
	<SlidingDrawer android:id="@+id/slidingdrawer"
		android:background="#00000000" android:layout_width="80dip"
		android:layout_height="fill_parent" android:layout_above="@id/tvTextPlayer"
		android:orientation="horizontal" android:handle="@+id/handle"
		android:layout_alignParentRight="true" android:content="@+id/content">
		<Button android:id="@+id/handle" android:layout_width="wrap_content"
			android:layout_height="60dip" android:background="@drawable/ic_dialog_dialer" />
		<LinearLayout android:layout_width="wrap_content"
			android:id="@+id/content" android:orientation="vertical"
			android:layout_height="wrap_content">
			<Button android:id="@+id/main_play_Button"
				android:layout_width="50dip" android:layout_height="50dip"
				android:background="@drawable/play" />
			<Button android:id="@+id/main_next_Button"
				android:layout_width="50dip" android:layout_height="50dip"
				android:background="@drawable/next" />
			<Button android:id="@+id/main_autopause_Button"
				android:layout_width="50dip" android:layout_height="50dip"
				android:background="@drawable/auto_play" />
			<Button android:id="@+id/main_previous_Button"
				android:layout_width="50dip" android:layout_height="50dip"
				android:background="@drawable/previous" />
			<Button android:id="@+id/main_record_Button"
				android:layout_width="50dip" android:layout_height="50dip"
				android:background="@drawable/ic_btn_speak_now" />
		</LinearLayout>
	</SlidingDrawer>
</RelativeLayout>
